{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es6",
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "@assets": [
        "src/assets"
      ],
      "@domain": [
        "src/domain"
      ],
      "@mocks": [
        "src/__mocks__/"
      ],
      "@infra": [
        "infra"
      ],
      "@types": [
        "src/types"
      ],
      "@app": [
        "src/application"
      ],
    }
  },
  "include": [
    "src"
  ],
}